<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraFunction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Mengubah warna tema utama menjadi biru -->
        <item name="colorPrimary">@color/ocean_blue</item>
        <item name="colorPrimaryVariant">@color/ocean_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Warna sekunder bisa disesuaikan jika perlu -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Style untuk memotong sudut atas pada gambar di dalam kartu -->
    <style name="RoundedTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
