<?xml version="1.0" encoding="utf-8"?>
<!-- Mengganti CardView dengan FrameLayout sebagai root element -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/custom_card_background"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Menggunakan ShapeableImageView untuk memotong sudut gambar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/historyImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/RoundedTopCorners"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="19 Juni 2025, 05:02:30" />

    </LinearLayout>

</FrameLayout>
